@model mohbeli.Models.Items

<tr id="@Model.ItemIndex">
    <td>
        @Model.ProductName
        <input type="hidden" name="Items[@Model.ItemIndex].ProductName" value="@Model.ProductName" />
    </td>
    <td>
        @Model.Code
        <input type="hidden" name="Items[@Model.ItemIndex].Code" value="@Model.Code" />
    </td>
    <td>
        @Model.Price
        <input type="hidden" name="Items[@Model.ItemIndex].Price" value="@Model.Price" />
    </td>
    <td>
        @Model.Quantity
        <input type="hidden" name="Items[@Model.ItemIndex].Quantity" value="@Model.Quantity" />
    </td>
    <td><button name="X-HTTP-Method-Override" value="DELETE" formnovalidate 
               class="btn btn-sm bg-danger text-white" onclick="return confirm('Are you sure?')">Delete</button></td>
</tr>
