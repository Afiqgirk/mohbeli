    </div>
    <div class="row mt-3">
        <div class="col-3">
            <h4 class="bg-primary text-white">MohBeli</h4>
            <pre>
Customer Name : @Model.CustomerName
Mobile No. : @Model.MobileNumber
Address : @Model.Address
</pre>
        </div>
        <div class="col-3">
            <pre>
Order No. : @Model.Id
</pre>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <table class="table table-bordered table-striped table-responsive">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Product Name</th>
                        <th>Code</th>
                        <th>Price</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.ProductName</td>
                            <td>@item.Code</td>
                            <td>@item.Price</td>
                            <td>@item.Quantity</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            <h4 class="float-end">Total Amount : @Model.TotalAmount</h4>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            <h5 class="float-end">Tax Amount : @Model.TaxAmount</h5>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            <h5 class="float-end">Net Amount : @Model.NetAmount</h5>
        </div>
    </div>
</div>


